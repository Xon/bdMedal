  <template type="public" title="bdmedal_message_macros" version_id="2000000" version_string="2.0.0"><![CDATA[<xf:macro name="user_medals" arg-position="manual" arg-user="!">
    <xf:set var="$imageSize" value="{{ property('bdMedal_messageImageSize') }}"/>
    <xf:set var="$max" value="{{ property('bdMedal_messageMax') }}"/>
    <xf:if is="$imageSize && $user.medal_count > 0">
        <xf:css src="bdmedal.less"/>
        <div class="bdMedal_messageUserMedals position-{$position|for_attr}">
            <ul>
                <xf:set var="$renderedCount" value="0"/>
                <xf:foreach loop="$user.medal_awardeds" i="$i" value="$awarded">
                    <xf:if is="!$max || $renderedCount < $max">
                        <xf:set var="$medal" value="{$awarded.Medal}"/>
                        <xf:set var="$medalImageUrl" value="{$medal.getImageUrl($imageSize)}"/>
                        <xf:if is="$medalImageUrl">
                            <xf:set var="$medalImageSizePixels" value="{$medal.getImageSizePixels($imageSize)}"/>
                            <xf:set var="$imageStyle">
                                background-image: url('{$medalImageUrl}');
                                <xf:if is="$medalImageSizePixels > 0">
                                    height: {$medalImageSizePixels}px;
                                    width: {$medalImageSizePixels}px;
                                </xf:if>
                            </xf:set>
                            <xf:set var="$medalTooltip">
                                <xf:if is="property('bdMedal_messageShowDate')">
                                    {{ phrase('bdmedal_message_user_info_tooltip_with_date',
                                    {'medal': $medal.name, 'date': date($awarded.award_date)}) }}
                                    <xf:else/>
                                    {{ phrase('bdmedal_message_user_info_tooltip', {'medal': $medal.name}) }}
                                </xf:if>
                            </xf:set>
                            <li class="medal-{$medal.medal_id} i{$renderedCount} size-{$imageSize|to_lower}{{ $medal.is_svg ? ' is-svg' : ''}}">
                                <div class="image" style="{{ trim($imageStyle)|raw|for_attr }}">
                                    <a href="{{ link('members/medals', $user) }}"
                                       data-xf-click="overlay"
                                       data-xf-init="tooltip" data-html="true"
                                       title="{{ trim($medalTooltip)|raw|for_attr }}">
                                        <img src="{$medalImageUrl}" alt="{$medal.name}"/>
                                    </a>
                                </div>
                            </li>
                            <xf:set var="$renderedCount" value="{{ $renderedCount + 1 }}"/>
                        </xf:if>
                    </xf:if>
                </xf:foreach>
            </ul>
        </div>
    </xf:if>
</xf:macro>]]></template>
